{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "typings.d.ts",
    "./src/**/*",
    "tests"
  ],
  "exclude": [
    "./node_modules"
  ],
}